<Window x:Class="MailSender.WPF.Tests.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.WPF.Tests"
        mc:Ignorable="d"
        Title="{Binding TextProperty}" 
        Height="450" Width="800">
   
    <Grid>
       <TextBlock Name="TextValue" Text="Value" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="3"/>
       <Button Content="Start" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="3,30" Padding="20,5" Click="ThreadStartClick"/>
    </Grid>
</Window>
